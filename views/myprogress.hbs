}

    
</style>

<script>
    const courses = [
    {
      title: "Introduction to JavaScript",
      image: "https://picsum.photos/id/237/200/200",
      enrolledDate: "Jan 1, 2022",
      completed: true
    },
    {
      title: "Intermediate JavaScript",
      image: "https://picsum.photos/id/238/200/200",
      enrolledDate: "Feb 1, 2022",
      completed: true
    },
    {
      title: "Advanced JavaScript",
      image: "https://picsum.photos/id/239/200/200",
      enrolledDate: "Mar 1, 2022",
      completed: false
    },
    {
      title: "Introduction to HTML",
      image: "https://picsum.photos/id/240/200/200",
      enrolledDate: "Apr 1, 2022",
      completed: true
    },
    {
      title: "Introduction to CSS",
      image: "https://picsum.photos/id/241/200/200",
      enrolledDate: "May 1, 2022",
      completed: false
    }
  ];
  
  const ongoingList = document.getElementById("ongoing-list");
  const completedList = document.getElementById("completed-list");
  
  courses.forEach(course => {
    const li = document.createElement("li");
    li.classList.add("card");
    li.innerHTML = `
      <img src="${course.image}" alt="${course.title}">
      <div class="details">
        <h3>${course.title}</h3>
        <span>Enrolled on ${course.enrolledDate}</span>
      </div>
      <span class="status">${course.completed ? "Completed" : "Ongoing"}</span>
    `;
    if (course.completed) {
      li.classList.add("completed");
      completedList.appendChild(li);
    } else {
      ongoingList.appendChild(li);
    }
  });
  
  $(document).ready(function() {
    $(".animated").addClass("animate__animated");
  });
  
</script>